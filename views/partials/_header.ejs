<header id="header">
  <nav class="navbar navbar-expand-md navbar-dark bg-info">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (user) { %>
        <div class="d-flex flex-column flex-md-row mb-2 mb-md-0 ml-md-auto justify-content-start text-light d-flex align-items-start align-items-md-center"><div class="pb-3 pb-md-0">Logged in as: 
          <%= user.email %></div>
          <form method="POST" action="/logout">
            <button name="logout" type="submit" class="btn btn-sm btn-outline-light ml-md-3" >Logout</button>
          </form></div>
      <% } else { %>
        <div class="ml-auto text-light navbar-nav">
          <a class="nav-item nav-link" href="/register">Register</a>
          <a class="nav-item nav-link" href="/login">Login</a>
        </div>
      <% } %>
  </div>
  </nav>
</header>