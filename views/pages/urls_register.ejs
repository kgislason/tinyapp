<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/_head'); %>
</head>

<body class="container">

  <%- include('../partials/_header'); %>

    <main class="py-5">
      <div class="card">
        <div class="card-header">
          <h1 class="h4 card-title mb-0">Register</h1>
        </div>
        <div class="card-body">
          <% if (errMessage) { %>
            <div class="alert alert-warning">
              <%= errMessage %>
            </div>
          <% } %>
          <form method="POST" action="/register">
            <div class="form-group">
              <label class="mr-1" for="email">Email:</label>
              <input class="form-control mr-1" type="email" name="email" id="email" placeholder="Enter your email" />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input class="form-control" type="password" id="password" name="password" placeholder="Choose a password" />
            </div>
            <button class="btn btn-primary" type="submit">Register</button>
        </div>
        </form>
      </div>
      <div class="card-footer text-muted">

      </div>
      </div>
      <div class="mt-4">
        <a href="/urls" class="btn btn-outline-primary">Back</a>
      </div>
    </main>

    <footer>
      <%- include('../partials/_footer'); %>
    </footer>

    <%- include('../partials/_scripts'); %>
</body>

</html>